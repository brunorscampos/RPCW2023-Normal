extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Contracts
    .w3-container
      table.w3-table-all(id="myTable")
        thead
          tr
            th _id
            th DataInicioContrato
            th DataFimContrato
            th NomeInstituicao
            th AreasInvestigacao
        tbody
          each c in contracts 
            tr
              td
                a(href="/" + c._id) #{c._id}
              td= c.DataInicioContrato
              td= c.DataFimContrato
              td
                a(href="/inst/" + c.NIPCInstituicao) #{c.NomeInstituicao}
              td= c.AreasInvestigacao
    footer.w3-container.w3-blue.w3-center
      h5 Generated for RPCW2023 in #{d}
